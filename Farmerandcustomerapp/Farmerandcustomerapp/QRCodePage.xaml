<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Farmerandcustomerapp.QRCodePage"
             BackgroundColor="#F0FFF0"
             Title="QR Code Scanner">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
        <Label Text="Scan QR Code" FontSize="24" TextColor="#3CB371" HorizontalOptions="Center"/>
        <Button Text="Start Scanning" BackgroundColor="#3CB371" TextColor="White" Clicked="OnStartScanningClicked"/>
        <Label x:Name="trackingDetailsLabel" FontSize="18" TextColor="#3CB371" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>
