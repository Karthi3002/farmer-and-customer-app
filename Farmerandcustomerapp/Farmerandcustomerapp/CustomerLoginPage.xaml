<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Farmerandcustomerapp.CustomerLoginPage"
             BackgroundColor="#FFF5EE"
             Title="Customer Login">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
        <Label Text="Customer Login" FontSize="24" TextColor="#FF6347" HorizontalOptions="Center"/>
        <Entry x:Name="emailEntry" Placeholder="Email" PlaceholderColor="#A9A9A9" TextColor="Black"/>
        <Entry x:Name="passwordEntry" Placeholder="Password" PlaceholderColor="#A9A9A9" IsPassword="True" TextColor="Black"/>
        <Button Text="Login" BackgroundColor="#FF6347" TextColor="White" Clicked="OnLoginButtonClicked"/>
    </StackLayout>
</ContentPage>
