<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Farmerandcustomerapp.CustomerDashboardPage"
             BackgroundColor="#FFFACD"
             Title="Customer Dashboard">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
        <Label Text="Customer Dashboard" FontSize="28" TextColor="#FFD700" HorizontalOptions="Center"/>
        <Button Text="Search for Products" BackgroundColor="#FFD700" TextColor="White" Clicked="OnSearchForProductsClicked"/>
        <Button Text="View Nearby Options" BackgroundColor="#FFD700" TextColor="White" Clicked="OnViewNearbyOptionsClicked"/>
        <Button Text="Make Purchases" BackgroundColor="#FFD700" TextColor="White" Clicked="OnMakePurchasesClicked"/>
    </StackLayout>
</ContentPage>
